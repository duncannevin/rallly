{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "installCommand": "pnpm install",
  "buildCommand": "pnpm db:generate && pnpm build:web && pnpm db:deploy",
  "outputDirectory": ".next",
  "crons": [
    {
      "path": "/api/house-keeping/delete-inactive-polls",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/house-keeping/remove-deleted-polls",
      "schedule": "30 6 * * *"
    },
    {
      "path": "/api/house-keeping/close-expired-polls",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/house-keeping/send-reminder-emails",
      "schedule": "0 * * * *"
    }
  ]
}